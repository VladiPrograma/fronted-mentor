---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	body: string;
	image_data: ImageMetadata;
}

const { image_data, title, body } = Astro.props;
---

<div class="card">
  <Image class="image" src={image_data}  alt="A bird."/>
  <div class="text-zone">
    <h2> {title}</h2>
  <p>{body}</p>
  </div>
</div>

<style>
  .text-zone{
    font-size: 1.5rem;
  }

  .image {
    border-radius: 1.5rem;
    max-width: 100%;
    height: auto;
  }

  .card {
    width: 21%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 2.5rem;
    padding: 1.2rem;
    background-color: white;
    box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.2);
  }

  html {
    font-family: 'Outfit', sans-serif;
    background-color: #d6e2f0;
  }

  h2 {
    font-weight: 700;
    color: #1f3251;
    text-align: center;
    padding-top: 20px;
    margin: 0;
  }

  p {
    color: #7b879d;
    text-align: center;
    font-size: 1.5rem;
  }

</style>
